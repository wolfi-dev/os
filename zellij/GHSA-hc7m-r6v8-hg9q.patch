From: Ankush Pathak <ankush.pathak@chainguard.dev>
Date: Tue, 18 Nov 2025 16:51:02 +0000
Subject: [PATCH] Bump wasmtime to 36.0.3 to remediate GHSA-hc7m-r6v8-hg9q

Signed-off-by: Ankush Pathak <ankush.pathak@chainguard.dev>
---
 zellij-server/Cargo.toml | 6 +++---
 1 file changed, 3 insertions(+), 3 deletions(-)

diff --git a/zellij-server/Cargo.toml b/zellij-server/Cargo.toml
index b8d1c576..3e293ba2 100644
--- a/zellij-server/Cargo.toml
+++ b/zellij-server/Cargo.toml
@@ -45,11 +45,11 @@ unicode-width = { workspace = true }
 url = { workspace = true }
 uuid = { workspace = true }
 vte = { workspace = true }
-wasmtime-wasi = { version = "29.0.1", default-features = false, features = ["preview1"] } # Keep in sync with wasmtime
+wasmtime-wasi = { version = "36.0.3", default-features = false, features = ["preview1"] } # Keep in sync with wasmtime
 zellij-utils = { workspace = true }
 
 [dependencies.wasmtime]
-version = "29.0.1" # Keep in sync with wasmtime-wasi
+version = "36.0.3" # Keep in sync with wasmtime-wasi
 default-features = false
 features = [
   'addr2line',
@@ -65,7 +65,7 @@ features = [
 [dev-dependencies]
 insta = "1.6.0"
 tempfile = "3.2.0"
-wasmtime = { version = "29.0.1", features = ["winch"] } # Keep in sync with the other wasmtime dep
+wasmtime = { version = "36.0.3", features = ["winch"] } # Keep in sync with the other wasmtime dep
 
 [features]
 singlepass = ["wasmtime/winch"]
